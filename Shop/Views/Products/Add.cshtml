@model Shop.Domain.Entity.Product


<div>
    <form class="form" asp-action="Add" asp-controller="Products" methodmethod="post" enctype="multipart/form-data">
        <div class="form_group">
            <input type="file" name="Picture" />
        </div>  
        <div class="form_group">
            <label>Name</label>
            <input class="form_input" asp-for="Name" name="Name" />
        </div>
        <div class="form_group">
            <label>Price</label>
            <input class="form_input" asp-for="Price" name="Price" />
        </div>
        <div class="form_group">
            <label>Description</label>
            <input class="form_input" asp-for="Description" name="Description" />
        </div>

        <div class="form_group">
            <input class="form_button" type="submit" value="Add" />
        </div>
    </form>
</div>
